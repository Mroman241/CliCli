<OptionButton@Button>:
    size_hint: (None,None)
    width: 200
    height: 40

<CliClicker>:
    orientation: "vertical"
    id: cliclicker
    menuoptions: menuopts
    clitab: cliclickertab
    buy_input: buy_input_id
    clicli: clicli_id

    blue: radio_blue.active
    red: radio_red.active
    green: radio_green.active

    description: ''
    item_name: ''
    price: 0

    score: 0

    reset_boost: 0 

    clicol: [.1, .1, .1, 1]
    col: (.7, .7, .9, 1)

    TabbedPanel:
        do_default_tab: False
        height: 200
        id: tabs

        TabbedPanelItem:
            text: "CliClicker"
            FloatLayout:
                id: cliclickertab
                canvas:
                    Color:
                        rgba: cliclicker.col
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    size_hint: (None, None)
                    id: score_label
                    pos_hint: {"right":.98, "top": 1}
                    color: 0,0,0,1
                    text: (str(round(cliclicker.score,1)) + " CC")
        
                Button:
                    id: clicli_id
                    size_hint: (None, None)
                    width: 200
                    height: 100
                    pos_hint: {"right":.62, "top":.6}
                    text: "Click!"
                    on_press: cliclicker.click()
                    background_normal: './Butt-texture.png'
                    background_color: cliclicker.clicol
                    font_size: 50

        TabbedPanelItem:
            text: "Upgrades"
            
            GridLayout:

                cols: 2

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.4, 1

                    Button:
                        text: 'Button power'
                        on_press: cliclicker.show_desc(self.text)
                    Button:
                        text: 'Percent increase'
                        on_press: cliclicker.show_desc(self.text)
                    Button:
                        text: 'Button shine'
                        on_press: cliclicker.show_desc(self.text)
                    Button:
                        text: 'Auto click I'
                        on_press: cliclicker.show_desc(self.text)
                    Button:
                        text: 'Auto click II'
                        on_press: cliclicker.show_desc(self.text)
                    Button:
                        text: 'Auto click III'
                        on_press: cliclicker.show_desc(self.text)
                    Button:
                        text: 'Auto click IV'
                        on_press: cliclicker.show_desc(self.text)

                FloatLayout:

                    canvas:
                        Color:
                            rgba: cliclicker.col
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    
                    Label:
                        size_hint: (None, None)
                        id: score
                        pos_hint: {"right":.98, "top": 1}
                        color: 0,0,0,1
                        text: (str(round(cliclicker.score,1)) + " CC")

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: (None, None)
                        pos_hint: {'top': .2, 'right':.79}
                        height: 30
                        width: 300

                        Button:
                            text: 'Buy 1'
                            on_release: cliclicker.buy_upgrade('1')
                        Button:
                            text: 'Buy 10'
                            on_release: cliclicker.buy_upgrade('10')
                        Button:
                            text: 'Buy Input'
                            on_release: cliclicker.buy_upgrade(cliclicker.buy_input.text)

                    Label:
                        size_hint: (None, None)
                        text: ('Price: ' + str(cliclicker.price))
                        font_size: 15
                        pos_hint: {'top': .35, 'right':.62}
                        color: 0,0,0,1

                    Label:
                        size_hint: (None, None)
                        text: cliclicker.item_name
                        width: 300
                        halign: 'left'
                        valign: 'top'
                        font_size: 30
                        pos_hint: {'top':1, 'right':.55}
                        color: 0,0,0,1

                    Label:
                        size_hint: (None, None)
                        width: 300
                        height: 200
                        text: cliclicker.description
                        halign: 'left'
                        valign: 'top'
                        text_size: self.size
                        font_size: 15
                        pos_hint: {'top':.8, 'right':.55}
                        color: 0,0,0,1
                    TextInput:
                        id: buy_input_id
                        size_hint: (None, None)
                        width: 100
                        height: 30
                        pos_hint: {'top': .13, 'right':.615}




        TabbedPanelItem:
            text: "Reset"
            
            FloatLayout:
                canvas:
                    Color:
                        rgba: cliclicker.col
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    color: 0,0,0,1
                    text: ('Resetting will give you a ' + str(cliclicker.reset_boost) + '% boost.')
                    font_size: 20
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    size_hint: (None,None)
                    pos_hint: {'right':.7, 'top':.8}
                    width: 300
                    height: 200

                Button:
                    text: 'Reset'
                    size_hint: (None,None)
                    pos_hint: {'right':.63, 'top':.4}
                    font_size: 20
                    width: 200
                    height: 80
                    on_press: cliclicker.reset_score()
                
                Label:
                    size_hint: (None, None)
                    id: score
                    pos_hint: {"right":.98, "top": 1}
                    color: 0,0,0,1
                    text: (str(round(cliclicker.score,1)) + " CC")

        
        TabbedPanelItem:
            text: "Menu"
            id: menu

            FloatLayout:
                id: menuopts
                canvas:
                    Color:
                        rgba: cliclicker.col
                    Rectangle:
                        pos: self.pos
                        size: self.size

                OptionButton:
                    text: 'Option 1'
                    pos_hint: {'right':.63, 'top':.9}

                OptionButton:
                    text: 'Option 1'
                    pos_hint: {'right':.63, 'top':.8}

                GridLayout:
                    cols: 6
                    size_hint: (None, None)
                    pos_hint: {'top': .7, 'right':.69}
                    height: 40
                    width: 300

                    canvas:
                        Color:
                            rgba: .9,.9,.9,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    
                    CheckBox:
                        group: "bg_color"
                        id: radio_blue
                        color: 0,0,0,1
                    Label:
                        text: 'blue'
                        color: 0,0,0,1
                    CheckBox:
                        group: "bg_color"
                        id: radio_red
                        color: 0,0,0,1
                    Label:
                        text: 'red'
                        color: 0,0,0,1
                    CheckBox:
                        group: "bg_color"
                        id: radio_green  
                        color: 0,0,0,1
                    Label:
                        text: 'green'
                        color: 0,0,0,1

                Button:
                    text: 'Apply'
                    size_hint: (None, None)
                    pos_hint: {'top': .6, 'right':.6}
                    height: 40
                    width: 150
                    on_release: cliclicker.bg_change()
                
                Button:
                    text: 'Exit'
                    size_hint: (None, None)
                    pos_hint: {'top': .2, 'right':.6}
                    height: 40
                    width: 150




    