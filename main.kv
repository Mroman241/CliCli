<CliClicker>:
    orientation: "vertical"
    id: cliclicker
    TabbedPanel:
        do_default_tab: False
        height: 200

        TabbedPanelItem:
            text: "CliClicker"
            FloatLayout:

                canvas:
                    Color:
                        rgba: (.7,.7,.9,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    size_hint: (None, None)
                    id: score
                    pos_hint: {"right":.98, "top": 1}
                    color: 0,0,0,1
                    text: ("Placeholder" + " CC")
        
                Button:
                    size_hint: (None, None)
                    width: 200
                    height: 100
                    pos_hint: {"right":.62, "top":.6}
                    text: "Click!"
                    font_size: 50

        TabbedPanelItem:
            text: "Upgrades"
            
            GridLayout:

                cols: 2

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.4, 1

                    Button:
                        text: 'Item 1'
                    Button:
                        text: 'Item 1'
                    Button:
                        text: 'Item 1'
                    Button:
                        text: 'Item 1'
                    Button:
                        text: 'Item 1'
                    Button:
                        text: 'Item 1'
                    Button:
                        text: 'Item 1'

                FloatLayout:

                    canvas:
                        Color:
                            rgba: .7,.7,.9,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    
                    Label:
                        size_hint: (None, None)
                        id: score
                        pos_hint: {"right":.98, "top": 1}
                        color: 0,0,0,1
                        text: ("Placeholder" + " CC")

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: (None, None)
                        pos_hint: {'top': .2, 'right':.79}
                        height: 30
                        width: 300

                        Button:
                            text: 'Buy 1'
                        Button:
                            text: 'Buy 10'
                        Button:
                            text: 'Buy Input'

                    Label:
                        size_hint: (None, None)
                        text: 'price'
                        font_size: 15
                        pos_hint: {'top': .35, 'right':.62}
                        color: 0,0,0,1

                    Label:
                        size_hint: (None, None)
                        text: 'Item name Long name'
                        width: 300
                        halign: 'left'
                        valign: 'top'
                        font_size: 30
                        pos_hint: {'top':1, 'right':.55}
                        color: 0,0,0,1

                    Label:
                        size_hint: (None, None)
                        width: 300
                        height: 200
                        text: 'Item Description hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh'
                        halign: 'left'
                        valign: 'top'
                        text_size: self.size
                        font_size: 15
                        pos_hint: {'top':.8, 'right':.55}
                        color: 0,0,0,1
                    TextInput:
                        size_hint: (None, None)
                        width: 100
                        height: 30
                        pos_hint: {'top': .13, 'right':.615}




        TabbedPanelItem:
            text: "Reset"
            
            FloatLayout:
                canvas:
                    Color:
                        rgba: .7,.7,.9,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    color: 0,0,0,1
                    text: ('Resetting will give you a ' + 'xx' + '% boost.')
                    font_size: 20
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    size_hint: (None,None)
                    pos_hint: {'right':.7, 'top':.8}
                    width: 300
                    height: 200

                Button:
                    text: 'Reset'
                    size_hint: (None,None)
                    pos_hint: {'right':.63, 'top':.4}
                    font_size: 20
                    width: 200
                    height: 80
                
                Label:
                    size_hint: (None, None)
